<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      {{#if restaurants}}
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="mb-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs yooo"></i>
                </span>

              </div>
            </div>
          </a>
          <div class="text-end">
            <a href="/restaurants/{{this._id}}" role='button' class="btn btn-success ">detail</a>
            <a href="/restaurants/{{this._id}}/edit" class="btn btn-warning" role='button'>edit</a>
            <form action="/restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger" onclick="return confirm('確定要刪除嗎?');">delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
      {{else}}
      <div class="video welcome-video-from-Jimmy-2-2-A14 mb-5">
        <video autoplay muted>
          <source src="https://giant.gfycat.com/SelfreliantCharmingDevilfish.mp4" type='video/mp4'>
          <source src="https://thumbs.gfycat.com/SelfreliantCharmingDevilfish-mobile.mp4" type="video/mp4">
        </video>
      </div>
      {{/if}}
    </div>
  </div>
</div>